const routes = {
  '/': homePage,
  '/tasks': tasksPage,
  '/about': aboutPage
};


function navigate() {
  const path = location.hash.slice(1) || '/';
  const route = routes[path] || notFoundPage;
  document.getElementById('app').innerHTML = route();
}


function homePage() {
  return `
    <section>
      <h2>Welcome to TaskFlow üå∏</h2>
      <p>Stay organized in style! TaskFlow helps you manage your daily goals through a beautiful and responsive interface.</p>
    </section>
  `;
}

function aboutPage() {
  return `
    <section>
      <h2>About TaskFlow</h2>
      <p><strong>TaskFlow</strong> is a Single Page Application built using only HTML, CSS, and JavaScript.</p>
      <ul>
        <li>üé® Responsive and colorful design</li>
        <li>üß≠ Client-side routing</li>
        <li>üíæ LocalStorage data persistence</li>
        <li>‚ö° Fast, lightweight, and framework-free</li>
      </ul>
    </section>
  `;
}

function notFoundPage() {
  return `
    <section>
      <h2>404 - Page Not Found</h2>
      <p>The page you're looking for doesn‚Äôt exist!</p>
    </section>
  `;
}


let tasks = JSON.parse(localStorage.getItem('tasks')) || [];

function tasksPage() {
  const taskListHTML = tasks.map((t, i) => `
    <li class="task">
      <span>${t}</span>
      <button onclick="deleteTask(${i})">Delete</button>
    </li>
  `).join('');

  return `
    <section>
      <h2>üìù My Tasks</h2>
      <form id="taskForm">
        <input type="text" id="taskInput" placeholder="Add a new task..." required />
        <button type="submit">Add</button>
      </form>
      <ul class="task-list">${taskListHTML || '<p>No tasks yet!</p>'}</ul>
    </section>
  `;
}

function addTask(e) {
  e.preventDefault();
  const input = document.getElementById('taskInput');
  const value = input.value.trim();
  if (value) {
    tasks.push(value);
    localStorage.setItem('tasks', JSON.stringify(tasks));
    input.value = '';
    navigate();
  }
}

function deleteTask(index) {
  tasks.splice(index, 1);
  localStorage.setItem('tasks', JSON.stringify(tasks));
  navigate();
}


window.addEventListener('hashchange', navigate);
window.addEventListener('load', () => {
  navigate();
  document.addEventListener('submit', (e) => {
    if (e.target.id === 'taskForm') addTask(e);
  });
});
